import time


class TrafficLight:
    __color = ['\033[31m {}'.format("Красный"), "\033[33m {}".format("Желтый"), "\033[32m {}".format("Зеленый")]

    def running(self):
        i = 0
        while i < 3:
            print(f'{TrafficLight.__color[i]}')
            if i == 0:
                time.sleep(7)
            elif i == 1:
                time.sleep(2)
            elif i == 2:
                time.sleep(6)
            i += 1


traffic_light = TrafficLight()
traffic_light.running()
